<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Black" >
    
   	<ScrollView 
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content">
   	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	    
		    <CheckBox
		        android:id="@+id/type_box"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="Type"
		        android:textColor="@color/White" />
		
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:paddingLeft="20dp" >
		
		        <CheckBox
		            android:id="@+id/heirloom_box"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text="Heirloom"
		            android:textColor="@color/White" />
		
		        <CheckBox
		            android:id="@+id/keepsake_box"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text="Keepsake"
		            android:textColor="@color/White" />
		
		        <CheckBox
		            android:id="@+id/misc_box"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text="Misc."
		            android:textColor="@color/White" />
		
		    </LinearLayout>
		
		    <CheckBox
		        android:id="@+id/category_box"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="Category"
		        android:textColor="@color/White" />
		
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:paddingLeft="20dp" >
		
		        <CheckBox
		            android:id="@+id/lost_box"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text="Lost"
		            android:textColor="@color/White" />
		
		        <CheckBox
		            android:id="@+id/found_box"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text="Found"
		            android:textColor="@color/White" />
		
		        <CheckBox
		            android:id="@+id/donation_box"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text="Donation"
		            android:textColor="@color/White" />
		
		    </LinearLayout>
		    
		    <CheckBox
		        android:id="@+id/date_box"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="Date"
		        android:textColor="@color/White" />
		<RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" >

			<DatePicker
			    android:id="@+id/start_date"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_alignParentTop="true" />
		
		    </RelativeLayout>

		<Button
		    android:id="@+id/filter_finish"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Apply filters!" />

		</LinearLayout>
	</ScrollView>

</LinearLayout>